<?xml version="1.0"?>
<routes xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Webapi:etc/webapi.xsd">
    <route url="/V1/conversations/mine" method="GET">
        <service class="MaxStan\LiveChat\Api\UserChatManagementInterface" method="getConversations" />
        <resources>
            <resource ref="self" />
        </resources>
    </route>
    <route url="/V1/conversation/:conversationId/messages/:currentPage" method="GET">
        <service class="MaxStan\LiveChat\Api\UserChatManagementInterface" method="getMessages" />
        <resources>
            <resource ref="self" />
        </resources>
    </route>
    <route url="/V1/conversation/:conversationId/message" method="POST">
        <service class="MaxStan\LiveChat\Api\UserChatManagementInterface" method="sendMessage" />
        <resources>
            <resource ref="self" />
        </resources>
    </route>
</routes>
